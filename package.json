{
    "name": "notes-sentiment-app",
    "version": "1.0.0",
    "description": "A fullstack notes app with sentiment analysis",
    "scripts": {
        "dev": "cd website && bun run dev",
        "build": "cd website && bun run build",
        "start": "cd website && bun run start",
        "deploy:infra": "cd backend && bun run deploy",
        "destroy:infra": "cd backend && bun run destroy",
        "lint-format-fix": "bunx lint-staged",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json,md}": [
            "bunx prettier --write"
        ]
    },
    "workspaces": [
        "website",
        "backend"
    ],
    "devDependencies": {
        "@types/node": "^20.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.5"
    }
}
