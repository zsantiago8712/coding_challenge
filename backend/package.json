{
  "name": "backend",
  "version": "0.1.0",
  "bin": {
    "backend": "bin/backend.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "deploy": "cdk deploy --require-approval never",
    "deploy:backend": "cdk deploy NotesBackendStack --require-approval never",
    "deploy:hosting": "cdk deploy NotesHostingStack --require-approval never",
    "deploy:full": "cdk deploy --all --require-approval never --app 'bunx ts-node bin/full-stack.ts'",
    "deploy:complete": "bun run check && bun run deploy:full && bun run setup-frontend && bun run seed",
    "destroy": "cdk destroy",
    "destroy:all": "cdk destroy --all --app 'npx ts-node bin/full-stack.ts'",
    "diff": "cdk diff",
    "diff:full": "cdk diff --all --app 'npx ts-node bin/full-stack.ts'",
    "cdk": "cdk",
    "check": "ts-node scripts/check-deployment.ts",
    "generate-env": "ts-node scripts/generate-frontend-env.ts",
    "setup-frontend": "bun run generate-env",
    "seed": "ts-node scripts/seed-database.ts",
    "seed:small": "SEED_COUNT=10 ts-node scripts/seed-database.ts",
    "seed:large": "SEED_COUNT=100 ts-node scripts/seed-database.ts"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.868.0",
    "@aws-sdk/lib-dynamodb": "^3.868.0",
    "@faker-js/faker": "^9.9.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.3.0",
    "aws-cdk": "2.1025.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "@aws-cdk/aws-appsync-alpha": "^2.59.0-alpha.0",
    "aws-cdk-lib": "2.208.0",
    "constructs": "^10.0.0",
    "faker": "^6.6.6",
    "ulid": "^3.0.1"
  }
}
